<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">

        <!-- this is background of the experience bar -->
        <shape>
            <gradient
                android:startColor="#616161"
                android:centerColor="#939393"
                android:endColor="#AEABAB"
                android:angle="-45" />

            <corners android:radius="6dp" />
        </shape>

    </item>

    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item
                    android:bottom="3dp"
                    android:right="2dp"
                    android:left="2dp"
                    android:top="3dp" >

                    <shape>
                        <gradient
                            android:startColor="#E49521"
                            android:centerColor="#EAC864"
                            android:endColor="#D69331"
                            android:angle="45" />

                        <corners android:radius="4dp" />

                    </shape>


                </item>
            </layer-list>
        </clip>

    </item>

</layer-list>