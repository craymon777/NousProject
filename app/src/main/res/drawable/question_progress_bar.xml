<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">

        <!-- this is background of the experience bar -->
        <shape>
            <solid android:color="#3A4A49" />

            <corners android:radius="20dp" />
        </shape>

    </item>

    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item
                    android:bottom="0dp"
                    android:right="2dp"
                    android:left="2dp"
                    android:top="0dp" >

                    <shape>
                        <gradient
                            android:startColor="#0DE816"
                            android:centerColor="#ECF6ED"
                            android:endColor="#79F47E"
                            android:angle="90" />

                        <corners android:radius="20dp" />

                    </shape>


                </item>
            </layer-list>
        </clip>

    </item>
</layer-list>